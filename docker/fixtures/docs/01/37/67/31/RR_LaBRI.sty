\def\titleLaBRI#1{\gdef\@titleLaBRI{#1}}
  \gdef\@titleLaBRI{\@title} % valeur par défaut
\def\authorLaBRI#1{\gdef\@authorLaBRI{#1}}
  \gdef\@authorLaBRI{\@author} % valeur par défaut
\def\dateLaBRI#1{\gdef\@dateLaBRI{#1}}
  \gdef\@dateLaBRI{\@date} % valeur par défaut
\def\colorlogo{0}
\def\LaBRIcolor{\gdef\colorlogo{1}}

\def\maketitleLaBRI#1{
%\paperwidth 210mm
%\paperheight 297mm
{\input psfig.sty
\lineskip 1pt
\normallineskip 1pt
\def\baselinestretch{1}
\def\normalsize{\@setsize\normalsize{11pt}\xipt\@xipt}
