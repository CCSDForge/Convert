\textheight 297mm
\columnsep 0pt
\columnseprule 0pt
\columnwidth \textwidth
\linewidth \textwidth

%--------------------------------------------------
\thispagestyle{empty}
\begin{minipage}{\textwidth}
\ifnum\colorlogo = 1
        \mbox{\psfig{file=labri-logo-big.ps,width=25mm}}
